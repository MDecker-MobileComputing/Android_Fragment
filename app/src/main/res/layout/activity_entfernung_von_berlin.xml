<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/fragment_koordinate"
        android:name="de.mide.android.fragmente.KoordinatenFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"  />

    <Button
        android:id="@+id/button_berechne_entfernung_zu_berlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fragment_koordinate"
        android:text="@string/button_berechnung_durchfuehren" />

    <Button
        android:id="@+id/button_zurueck_von_berlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_berechne_entfernung_zu_berlin"
        android:text="@string/button_zurueck" />
            
</RelativeLayout>

