<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       		<fragment
                android:id="@+id/fragment_koordinate_1"
       	  		android:name="de.mide.android.fragmente.KoordinatenFragment"
   		  		android:layout_width="match_parent"
   		  		android:layout_height="wrap_content"
   		  		android:layout_marginTop="5dp"  />

       		<fragment
                android:id="@+id/fragment_koordinate_2"
       	  		android:name="de.mide.android.fragmente.KoordinatenFragment"
   		  		android:layout_width="match_parent"
   		  		android:layout_height="wrap_content"
   		  		android:layout_below="@id/fragment_koordinate_1"
   		  		android:layout_marginTop="5dp"  />

		    <Button
                android:id="@+id/button_berechne_entfernung_zwischen_zwei_koordinaten"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="10dp"
		    	android:layout_below="@id/fragment_koordinate_2"
		    	android:text="@string/button_berechnung_durchfuehren" />

            <Button
                android:id="@+id/button_zurueck_von_zwei_orten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/button_berechne_entfernung_zwischen_zwei_koordinaten"
                android:text="@string/button_zurueck" />

    </LinearLayout>

</ScrollView>


